<!DOCTYPE html>
<html>
<head>

	<%= favicon_link_tag %>
  <title>Tracker</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
  <%= javascript_include_tag "https://codemirror.net/addon/edit/matchtags.js", "matchTags" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	
	<%if current_user%>
	<div class="top-left"><a href="/home">Home</a></div>
	<div class="top-left"><a href="/trackers">All Tickets</a></div>
	<div class="top-left"><a href="/status">Status</a></div>
	<div class="top-left"><a href="/charts">Charts</a></div>
	<%if current_user.admin? || current_user.dev?%>
	<div class="top-right"><a href="/users">Users</a></div>
	<div class="top-left"><a href="/dashboard">Dashboard</a></div>
	<%else%>
	<div class="top-left"><a href="/nokocleaner">Cleaner-2</a></div>
	<%end%>
	<%if current_user.dev?%>
	<div class="top-left"><a href="/news">News</a></div>
	<%end%>
	<div class="top-right"><%= link_to "Logout", logout_path, method: "delete" %> </div>
	
	<%else%>
	<div class="top-right"><a href="/login">Login</a></div>
	<div class="top-right"><a href="/signup">Signup</a></div>
	<%end%>
	<div class="top-left"><a href="/cleaner">Cleaner</a></div>
	
<%#= form_tag url_for(:controller=>"application",:action =>"search") ,:method=>"get" do %>
	<!-- <input style="width:120px; float:right;" name="ticket_id" ></input>
	<%#end%> -->

	<div style="clear:both"></div></div><br>
<%= yield %>

</body>
</html>
