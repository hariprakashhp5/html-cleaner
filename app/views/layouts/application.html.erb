<!DOCTYPE html>
<html>
<head>
	<%= favicon_link_tag %>
  <title>Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<div class="top-left"><a href="/home">Home</a></div>
	<div class="top-left"><a href="/trackers">All Tickets</a></div>
	<div class="top-left"><a href="/status">Status</a></div>
	<div class="top-left"><a href="/cleaner">Cleaner</a></div>
	
	<%if current_user%>
	<div class="top-right"><%= link_to "Logout", logout_path, method: "delete" %> </div>
	<%if current_user.admin?%>
	<div class="top-right"><a href="/users">Users</a></div>
	<%end%>
	<%else%>
	<div class="top-right"><a href="/login">Login</a></div>
	<div class="top-right"><a href="/signup">Signup</a></div>
	<%end%>

	
<%#= form_tag url_for(:controller=>"application",:action =>"search") ,:method=>"get" do %>
	<!-- <input style="width:120px; float:right;" name="ticket_id" ></input>
	<%#end%> -->

	<div style="clear:both"></div></div><br>
<%= yield %>

</body>
</html>
